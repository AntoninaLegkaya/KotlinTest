<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/namePurchase"
                style="@style/title1TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/brandPurchase"
                android:textAlignment="center"
                android:text="@string/item_title_purchase_name"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/brandPurchase"
                style="@style/title1TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Count"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/costPurchase"
                style="@style/title1TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:layout_toEndOf="@id/brandPurchase"
                android:text="@string/item_title_purchase_cost"/>

    </RelativeLayout>
</layout>