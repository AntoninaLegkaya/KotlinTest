<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.fb.roottest.home.PurchaseViewModel"/>

    </data>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/namePurchase"
                style="@style/bodyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:layout_toStartOf="@id/countPurchase"
                android:text="@{viewModel.name}"
               />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/countPurchase"
                style="@style/bodyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="@{viewModel.count}"
                tools:text="count"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/costPurchase"
                style="@style/bodyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:layout_toEndOf="@id/countPurchase"
                android:text="@{viewModel.cost}"
                tools:text="cost"/>

    </RelativeLayout>

</layout>